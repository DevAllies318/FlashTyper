              <% } %>
            </tbody>
          </table>
        </div>
        <div class="time60Data">
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>WPM</th>
                <th>Accuracy</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% if (data['60'].length !== 0) { %> <%
              data['60'].forEach(function(item, index) { %>
