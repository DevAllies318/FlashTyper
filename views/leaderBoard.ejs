                <td><%= index + 1 %></td>
                <!-- Display the row number -->
                <td><%= item[1] %></td>
                <!-- Username -->
                <td><%= item[0] %></td>
                <!-- WPM -->
                <td><%= item[3].toFixed(2) %></td>
